{

    "express": {
        "view cache": false,
        "view engine": "hbs"
    },

    "view engines": {
        "hbs": {
            "module": "handlebars-engine"
        }
    },


    "middleware": {

        "static": {
            "module": {
                "arguments": [ "path:./public" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        },
 
        "session": {
            "enabled": true,
            "priority": 100,
            "module": {
                "name": "express-session",
                "arguments": [
                    {
                        "key": "",
                        "secret": "leveldb-init-random:session-secret",
                        "store": "require:./lib/sessionStore",
                        "cookie": {
                            "path": "/",
                            "httpOnly": true,
                            "maxAge": null
                        },
                        "resave": true,
                        "saveUninitialized": true,
                        "proxy": null
                    }
                ]
            }
        },


        "fileNotFound": {
            "enabled": true,
            "priority": 130,
            "module": {
                "name": "kraken-js/middleware/404",
                "arguments": [ "errors/404" ]
            }
        },

        "serverError": {
            "enabled": true,
            "priority": 140,
            "module": {
                "name": "kraken-js/middleware/500",
                "arguments": [ "errors/500" ]
            }
        }

    }
}
