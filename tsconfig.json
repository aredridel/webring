{
  "typeAcquisition": {
    "enable": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**"],
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  }
}
